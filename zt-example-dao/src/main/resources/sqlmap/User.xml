<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zt.example.dao.user.UserDao">
    <resultMap id="UserMap" type="com.zt.example.domain.user.User">
        <result column="user_id" property="userId" />
        <result column="password" property="password" />
        <result column="status" property="status" />
        <result column="create_date" property="createDate" />
    </resultMap>

    <sql id="commonColumns">
      user_id, password,status,create_date
    </sql>

    <select id="queryByguID" parameterType="java.lang.String"
            resultMap="UserMap">
        select <include refid="commonColumns"/>
        from example_user
        where user_id=#{userId}
    </select>

    <select id="queryAll" parameterType="com.zt.example.domain.user.User"
            resultMap="UserMap">
        select <include refid="commonColumns"/>
        from example_user
        <where>
            <if test="userId!=null and userId!=''">
                user_id=#{userId}
            </if>
        </where>
    </select>


    <insert id="insertUser" parameterType="com.zt.example.domain.user.User">
            insert into example_user (user_id, password,
            values (#{userId},#{password},
        </insert>
</mapper>